
@{
    ViewBag.Title = "AddQuestion";
    Layout = "~/Areas/Admin//Views/Shared/Layout1.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Manager Test</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Test</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="container-fluid p-3">
        <div class="row justify-content-between">
            <div class="row">
                <button type="button" class="btn btn-primary m-2" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Thêm loại câu hỏi</button>
                <a class="m-2 btn btn-primary" href="@Url.Action("ManageQuestion","admin")"> Quản lý câu hỏi</a>
            </div>
            <form action="~/Admin/Admin/addQuestionFromExcel" enctype = "multipart/form-data" class="row p-2 border border-dark rounded" method="post">
                <button type="submit" class="btn btn-primary">Up file excel</button>
                <input type="file" required name="file" class="m-1" />
            </form>
        </div>
            <form>
                <div class="form-group">
                    <label for="formGroupExampleInput">Tên câu hỏi:</label>
                    <input type="text" class="form-control" id="Text" name="Text" placeholder="Nhập câu hỏi" required="true">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Loại câu hỏi:</label>
                    <select class="form-control" id="CategoryId" name="CategoryId">
                    </select>
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Câu trả lời:</label>
                </div>
                <div id="answer">
                </div>
                <button class="btn btn-primary" onclick=" return AddQuestion(); ">Submit</button>
            </form>

            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog ">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">×</button>
                            <h4 class="modal-title" id="myModalLabel">Add Category</h4>
                        </div>
                        <div class="modal-body">
                            <form>
                                <p>Tạo loại câu hỏi</p>
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" id="Name" placeholder="Loại câu hỏi" required="true">
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

        @section scripts {
            <script src="~/Areas/Admin/Style/Js/Question.js"></script>
        }
