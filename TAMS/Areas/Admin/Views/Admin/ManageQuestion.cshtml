@model TAMS.Entity.Models.Question
@{
    ViewBag.Title = "ManageQuestion";
    Layout = "~/Areas/Admin//Views/Shared/Layout1.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Manage question </h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Question</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-between">
                    <a class="btn btn-primary m-2" href='@Url.Action("Question","Admin")'>Add New Question</a>
                    <div class="row m-2">
                        <input type="text" class="rounded pl-2" id="search" />
                        <label class="m-2">Search</label>
                    </div>
                    <div class="row m-2">
                        <select id="FilterCategoryAnswer" name="FilterCategoryAnswer" class="mr-2">
                            <option name="FilterCategoryAnswer" value="">Category Answer</option>
                            <option name="FilterCategoryAnswer" value="CheckBox">CheckBox</option>
                            <option name="FilterCategoryAnswer" value="Radio">Radio</option>
                            <option name="FilterCategoryAnswer" value="Text">Text</option>
                        </select>
                        <select id="FilterCategoryQuestion" name="FilterCategoryQuestion">
                            <option name="FilterCategoryQuestion" value="">Category Question</option>
                        </select>
                        <label class="m-2">Filter</label>
                    </div>
                </div>


                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                Text
                            </th>
                            <th>
                                Category Name
                            </th>
                            <th>
                                Type Answer
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody class="tbody"></tbody>
                </table>
            </div>
        </div>
        <div class="next">
        </div>
        <div class="modal fade bd-example-modal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="container modal-header row justify-content-between">
                        <div><h4 class="modal-title" id="myModalLabel">Add Category</h4></div>
                        <button type="button" class="btn btn-danger text-white" data-dismiss="modal">x</button>

                    </div>
                    <div class="modal-body">
                        <form>
                            @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @placeholder = "Id" })
                            <div class="form-group">
                                <label for="formGroupExampleInput">Tên câu hỏi:</label>
                                <input type="text" class="form-control" id="Text" name="Text" placeholder="Nhập câu hỏi">
                            </div>
                            <div class="form-group">
                                <label for="formGroupExampleInput">Loại câu hỏi:</label>
                                <select class="form-control" id="CategoryAnswer" name="CategoryAnswer">
                                    <option id="CategoryAnswer" value="null">Chọn hình thức trả lời</option>
                                    <option id="CategoryAnswer" value="CheckBox">CheckBox</option>
                                    <option id="CategoryAnswer" value="Radio">Radio</option>
                                    <option id="CategoryAnswer" value="Text">Text</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="formGroupExampleInput">Loại câu hỏi:</label>
                                <select class="form-control" id="CategoryId" name="CategoryId">
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="formGroupExampleInput2">Câu trả lời:</label>

                            </div>
                            <div id="answer">

                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">

                        <button type="button" class="btn btn-primary" id="btnUpdate" onclick="UpdateQuestion();">Update</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts {
    <script src="~/Areas/Admin/Style/Js/Admin/ManagerQuestion.js" >
    </script>
    <script  type="text/javascript">
        
    </script>
}

@section style {
    <link rel="stylesheet" href="~/Areas/Admin/Style/Css/Admin.css">
}

