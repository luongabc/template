
@{
    Layout = "~/Areas/Admin//Views/Shared/Layout1.cshtml";
    var listTests = ViewData["listTest"] as List<TAMS.Entity.Models.FormTest>;
    var totalPage = (int)ViewData["totalPage"];
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Manager Test</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Test</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div>

</div>
<section class="content">
    <div class="container-fluid">

        <!-- /.row -->
        <!-- Main row -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">DataTable Test</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row justify-content-between">
                    <a class="btn btn-primary m-3"  href="/Admin/Test/Create">Create</a>
                    <div class="row p-3">
                        <input type="text"  class="rounded "id="search-input"/>
                        <i class="fas fa-search m-2 " id="search-btn"></i>
                    </div>
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Number Question</th>
                            <th>Time</th>
                            <th>Create Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in listTests)
                        {
                            <tr id="Test_@item.Id">
                                <td>@item.Name</td>
                                <td>@item.TotalQuestion</td>
                                <th>@item.Time</th>
                                <th>@item.CreateDate</th>
                                <th>
                                    <a href="/Admin/Test/FormTest?search=&&IdForm=@item.Id&&Page=1">Detail |</a>
                                    <a href="/Admin/Test/Delete?IdTest=@item.Id">Delete</a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row justify-content-end p-2">
                            <div class="">
                                <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                    <ul class="pagination">
                                        @for (int i = 1; i <= 3; i++)
                                        {
                                            if (i > totalPage) { break; }
                                            if (i == 1)
                                            {
                                                <li class="paginate_button page-item active"><a href="/Admin/Test/Page?page=@i" aria-controls="example2" data-dt-idx="1" tabindex="0" class="page-link">@i</a></li>
                                            }
                                            else
                                            {
                                                <li class="paginate_button page-item"><a href="/Admin/Test/Page?page=@i" aria-controls="example2" data-dt-idx="1" tabindex="0" class="page-link">@i</a></li>
                                            }
                                        }
                                        @if (2 < totalPage)
                                        {
                                            <li class="paginate_button page-item"><a href="/Admin/Test/Page?page=2" aria-controls="example2" data-dt-idx="1" tabindex="0" class="page-link">Next</a></li>
                                        }
                                        <li class="paginate_button page-item"><a href="/Admin/Test/Page?page=2" aria-controls="example2" data-dt-idx="1" tabindex="0" class="page-link">End</a></li>

                                    </ul>
                                </div>
                            </div>
                        </div>
            
            </div>
            <!-- /.card-body -->
            <!-- /.row -->
        </div><!--/. container-fluid -->
    </div>
</section>
<!-- /.content -->
@section scripts {
    <script type="text/javascript">
        $("#search-btn").on("click", () => { window.location.href = "/Admin/Test/Search?search=" + $("#search-input").val() })
    </script>
    }